@model IEnumerable<ExamenFinal.Models.Visita>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Visitas registradas</h2>

<a href="@Url.Action("Create", "Visitas")" class="btn-floating btn-large waves-effect waves-light">
    <i class="material-icons">add</i></a>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Motivovisita)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fechavisita)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Horaentrada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Horasalida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonaRecibidora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contactos.Nombrecompleto)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Motivovisita)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fechavisita)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Horaentrada)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Horasalida)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PersonaRecibidora)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contactos.Nombrecompleto)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
