    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" value="Agregar" class="btn btn-default">Agregar<i class="material-icons right">send</i></button>
        </div>
    </div>
</div>

    <div>
        <button class="waves-effect waves-light btn yellow">@Html.ActionLink("Ver lista", "Index")</button>
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
